{
  "scripts": {
    "dev": "concurrently --names 'Tailwind,  Dioxus' -c blue,green 'bun run dev:tw' 'bun run dev:dx'",
    "dev:tw": "bunx @tailwindcss/cli -i ./src/style.css -o ./assets/style.css --watch --map",
    "dev:dx": "dx serve --platform desktop"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.1",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.2.1"
  }
}
